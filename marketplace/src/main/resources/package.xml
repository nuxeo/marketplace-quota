<!-- See documentation at http://doc.nuxeo.com/x/HgIz -->
<package type="addon" name="nuxeo-quota" version="@VERSION@">
  <title>Nuxeo Quota</title>
  <description>
   The Nuxeo Quota addon enables users to define a maximum size for the domains and workspaces they manage and provide some statistics about storage space use in the application.
  </description>
  <home-page>https://doc.nuxeo.com/nxdoc/nuxeo-quota/</home-page>
  <vendor>Nuxeo</vendor>
  <installer restart="true" />
  <uninstaller restart="true" />
  <!-- <hotreload-support>false</hotreload-support> -->
  <!-- <require-terms-and-conditions-acceptance>false</require-terms-and-conditions-acceptance> -->
  <nuxeo-validation>nuxeo_certified</nuxeo-validation>
  <production-state>production_ready</production-state>
  <supported>true</supported>
  <platforms>
    <platform>server-@DISTRIB_VERSION@</platform>
    <platform>server-@DISTRIB_VERSION@-*</platform>
  </platforms>
  <optional-dependencies>
    <package>nuxeo-jsf-ui</package>
  </optional-dependencies>
  <license>LGPL</license>
  <license-url>http://www.gnu.org/licenses/lgpl.html</license-url>
  <visibility>PUBLIC</visibility>
</package>
